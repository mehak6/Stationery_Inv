# ========== ENVIRONMENT CONFIGURATION ==========
NODE_ENV=development

# ========== SERVER CONFIGURATION ==========
PORT=3000
HOST=localhost

# ========== DATABASE CONFIGURATION ==========
# Development Database (PostgreSQL)
DATABASE_URL=postgresql://stationery_user:stationery123@localhost:5432/stationery_business

# Production Database (example - update with your production details)
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/prod_database

# ========== CORS CONFIGURATION ==========
# Allowed origins for CORS (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# ========== SECURITY CONFIGURATION ==========
# Session secret for production (change this!)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# ========== LOGGING CONFIGURATION ==========
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========== DATABASE POOL CONFIGURATION ==========
# Database connection pool settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ========== PRODUCTION SETTINGS ==========
# Enable SSL in production
SSL_ENABLED=false

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========== DEVELOPMENT SETTINGS ==========
# Enable detailed error messages in development
DETAILED_ERRORS=true

# Database SSL settings
DB_SSL=false

# ========== BACKUP CONFIGURATION ==========
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30