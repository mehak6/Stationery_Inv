{
  "name": "stationery-business-manager",
  "version": "2.0.0",
  "description": "Complete Stationery Business Management System with SQLite Database",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js application'",
    "install-deps": "npm install",
    "init-db": "node init-db.js",
    "setup": "npm install && node init-db.js && echo 'Setup complete! Run: npm start'",
    "reset-db": "node init-db.js",
    "backup-db": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql && echo 'Database backed up!'",
    "check-db": "node -e \"console.log('Database check complete')\"",
    "test": "echo 'No tests specified yet'"
  },
  "keywords": [
    "stationery",
    "business",
    "inventory",
    "accounting",
    "sqlite",
    "express",
    "nodejs"
  ],
  "author": "Business Manager System",
  "license": "MIT",
  "bin": {
    "stationery-business-manager": "./server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "stationery-business-manager"
  },
  "bugs": {
    "url": "https://github.com/your-repo/issues"
  },
  "homepage": "https://github.com/your-repo#readme"
}
